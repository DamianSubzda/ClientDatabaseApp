<Window x:Class="ClientDatabaseApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:ClientDatabaseApp" xmlns:local1="clr-namespace:ClientDatabaseApp.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{StaticResource Color1}">

        <TabControl>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding TabSelectionChangedCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            
            <TabItem Header="Baza klientów">
                <local1:ClientDatabase/>
            </TabItem>
            <TabItem  Header="Dodaj klienta">
                <local1:AddClient/>
            </TabItem>
            <TabItem Header="Wczytaj CSV">
                <local1:LoadCSV/>
            </TabItem>
            <TabItem Header="To Do">
                <local1:ToDo/>
            </TabItem>
            <TabItem Header="Kalendarz">
                <local1:Calendar/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
